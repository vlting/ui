    { "shadcn": "<RadioGroup>", "vlting": "<RadioGroup.Root>", "reason": "Dot-notation compound component API" },
    { "shadcn": "No size prop", "vlting": "size='sm' | 'md' | 'lg' on Root", "reason": "vlting includes built-in size variants" }
  ]
